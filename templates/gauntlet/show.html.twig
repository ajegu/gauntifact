{% extends 'dashboard/index.html.twig' %}

{% block title %}{% endblock %}

{% block dashboard_body %}
    <div class="row card">
        <div class="card-header">
            <h2>
                {{ 'label.gauntlet'|trans }} #{{ gauntlet.number }}
                {% if gauntlet.status == constant('App\\Entity\\Gauntlet::STATUS_CURRENT') %}
                    <span class="badge badge-warning float-right">{{ 'label.gauntlet_current'|trans }}</span>
                {% elseif gauntlet.status == constant('App\\Entity\\Gauntlet::STATUS_FINISH') %}
                    <span class="badge badge-success float-right">{{ 'label.gauntlet_current'|trans }}</span>
                {% elseif gauntlet.status == constant('App\\Entity\\Gauntlet::STATUS_CONCEDED') %}
                    <span class="badge badge-danger float-right">{{ 'label.gauntlet_current'|trans }}</span>
                {% endif %}
            </h2>
        </div>
        <div class="card-body row">

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">{{ 'label.your_deck'|trans }} : {{ gauntlet.deck.name }}</div>
                    <div class="card-body">
                        <ul class="list-group">
                            {% for deckCard in gauntlet.deck.deckCards %}
                                <li class="list-group-item">
                                    {{ deckCard.card.name }}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        {{ 'label.your_games'|trans }}
                        <button type="button" class="btn btn-primary float-right" id="btn-show-add-game">
                            <span class="ladda-label"><i class="fas fa-plus"></i> {{ 'btn.add_game'|trans }}</span>
                        </button>
                    </div>
                    <div class="card-body">

                        <ul class="list-group">
                            {#{% for deckCard in gauntlet.deck.deckCards %}#}
                            {#<li class="list-group-item">#}
                            {#{{ deckCard.card.name }}#}
                            {#</li>#}
                            {#{% endfor %}#}
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="gauntlet" data-gauntlet-id="{{ gauntlet.id }}"></div>
{% endblock %}

{% block javascripts %}
    <script type="application/javascript">
        $(document).ready(function () {
            $('#btn-show-add-game').click(showAddGame)
        })
    </script>
{% endblock %}