                    <th></th>
                </tr>
                </thead>
                {#<tbody>#}
                {#{% for gauntlet in gauntlets %}#}
                    {#<tr>#}
                        {#<td>{{ gauntlet.id }}</td>#}
                        {#<td>{{ gauntlet.created|localizeddate('short', 'short', app.request.locale) }}</td>#}
                        {#<td>{{ gauntlet.type.name }}</td>#}
                        {#<td class="text-center"><h3>{{ gauntletStatusBadge(gauntlet.status) }}</h3></td>#}
                        {#<td class="text-center">#}
                            {#<a href="{{ path('app_gauntlet_show', {id: gauntlet.id}) }}" class="btn btn-primary">#}
                                {#<i class="far fa-file-alt mr-2"></i>#}
                                {#{{ 'btn.show'|trans }}#}
                            {#</a>#}
                        {#</td>#}
                    {#</tr>#}
                {#{% endfor %}#}
                {#</tbody>#}
            </table>
        </div>
    </div>

{% endblock %}

{% block dashboard_javascripts %}
    <script type="application/javascript">
        $(document).ready(function () {

            $('#list-gauntlet-history').DataTable({
                ajax: Routing.generate('app_gauntlet_list'),
                processing: true,
                serverSide: true,
                order: [
                    [1, 'desc']
                ],
                columns: [
                    { data: 'number'},
                    { data: 'playedAt'},
                    { data: 'type'},
                    {
                        data: 'status',
                        render: function(data) {
                            let cssClass;
                            let label;
                            if (data ==  '{{ constant('App\\Entity\\Gauntlet::STATUS_FINISH') }}') {
                                cssClass = 'success'
                                label = '{{ 'label.gauntlet_finish'|trans }}';
                            } else if (data ==  '{{ constant('App\\Entity\\Gauntlet::STATUS_CONCEDED') }}') {
                                cssClass = 'secondary'
                                label = '{{ 'label.gauntlet_conceded'|trans }}';
                            } else {
                                cssClass = 'warning'
                                label = '{{ 'label.gauntlet_current'|trans }}';
                            }

                            return `<h2 class="badge badge-${cssClass}">${label}</h2>`
                        },
                        className: 'text-center'
                    },
                    {
                        data: 'actions',
                        render: function (data, type, row) {
                            const url = Routing.generate('app_gauntlet_show', {id: row.id})
                            return `<a href="${url}" class="btn btn-primary">
                            <i class="far fa-file-alt mr-2"></i>
                            ${data}
                            </a>`
                        },
                        className: 'text-right',
                        orderable: false
                    }
                ],
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.18/i18n/French.json"
                },
                searching: false
            })
        })
    </script>
{% endblock %}