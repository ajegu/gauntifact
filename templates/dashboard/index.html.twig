{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="row my-2 mx-2">
        <div class="col-md-2">
            {{ render(controller('App\\Controller\\DashboardController::menu')) }}
        </div>
        <div class="col-md-10">
            {% block dashboard_body %}
                <div class="navbar">
                    <ul class="navbar-nav mr-auto">

                    </ul>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="button" class="btn btn-outline-secondary active">Ajourd'hui</button>
                        <button type="button" class="btn btn-outline-secondary">Cette semaine</button>
                        <button type="button" class="btn btn-outline-secondary">Ce mois-ci</button>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-header">Total Games</div>
                            <h2 class="card-body text-center">40</h2>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-header">Total Affrontements</div>
                            <h2 class="card-body text-center">12</h2>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-header">Winrate</div>
                            <h2 class="card-body text-center">58,65%</h2>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">Score</div>
                            <h2 class="card-body text-center">28 - 12</h2>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <h3>Vue d'ensemble</h3>
                    <canvas id="myChart"></canvas>
                </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="application/javascript">
        $(document).ready(function() {
            $('#btn-show-add-gauntlet').click(showAddGauntlet)

            // On affiche avec Notify, les flash messages
            {% for label, messages in app.flashes %}
            {% for message in messages %}
            Utils.notify({
                type: '{{ label }}',
                message: '{{ message }}'
            });
            {% endfor %}
            {% endfor %}


            var ctx = document.getElementById("myChart");
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
                    datasets: [{
                        label: '# of Votes',
                        data: [12, 19, 3, 5, 2, 3],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255,99,132,1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero:true
                            }
                        }]
                    }
                }
            });
        })
    </script>

    {% block dashboard_javascripts %}{% endblock %}
{% endblock %}