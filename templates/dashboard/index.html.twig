{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="row my-2 mx-2">
        <div class="col-md-2">
            {{ render(controller('App\\Controller\\DashboardController::menu')) }}
        </div>
        <div class="col-md-10">
            {% block dashboard_body %}
                <div class="navbar">
                    <ul class="navbar-nav mr-auto">

                    </ul>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-secondary active">{{ 'label.today'|trans }}</button>
                        <button type="button" class="btn btn-outline-secondary">{{ 'label.this_week'|trans }}</button>
                        <button type="button" class="btn btn-outline-secondary">{{ 'label.this_month'|trans }}</button>
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown">
                            {{ 'label.custom_dates'|trans }}
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <form class="px-4 py-3">
                                <div class="form-group">
                                    <label for="dateDebut">Date d√©but</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="dateDebut">
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="fas fa-calendar-alt"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="dateFin">Date fin</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="dateFin">
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="fas fa-calendar-alt"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-primary">{{ 'btn.submit'|trans }}</button>
                            </form>
                        </div>
                    </div>

                </div>
                <hr>
                <div class="row">
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-header">{{ 'label.total_games_played'|trans }}</div>
                            <h2 class="card-body text-center">40</h2>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-header">{{ 'label.total_gauntlet_played'|trans }}</div>
                            <h2 class="card-body text-center">12</h2>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-header">{{ 'label.winrate'|trans }}</div>
                            <h2 class="card-body text-center">58,65%</h2>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">{{ 'label.score'|trans }}</div>
                            <h2 class="card-body text-center">28 - 12</h2>
                        </div>
                    </div>
                </div>
                <hr>
                {#<div class="row">#}
                    {#<h3>Vue d'ensemble</h3>#}
                    {#<canvas id="myChart"></canvas>#}
                {#</div>#}
            {% endblock %}
        </div>
    </div>
{% endblock %}

