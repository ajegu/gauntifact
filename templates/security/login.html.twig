{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<form method="post">
    <div class="card mx-auto col-md-4 my-5">
        <div class="card-body">
            <h5 class="card-title">{{ 'title.login'|trans }}</h5>
            <form method="post">
                <div class="form-group">
                    <label for="inputEmail">{{ 'label.email'|trans }}</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           placeholder="{{ 'label.email'|trans }}" required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword">{{ 'label.password'|trans }}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{{ 'label.password'|trans }}"
                           required>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <button class="btn btn-primary" type="submit">{{ 'btn.login'|trans }}</button>

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </form>
        </div>
    </div>
</form>
{% endblock %}
