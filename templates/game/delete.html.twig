<div class="modal fade" id="modal-delete-game" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'title.add_game'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_widget(form) }}
                Confirmez-vous la suppression de la game #{{ game.number }} ?
                <div class="game" data-game-id="{{ game.id }}"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'btn.close'|trans }}</button>
                <button type="submit" class="btn btn-primary">{{ 'btn.submit'|trans }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>

<script type="application/javascript">
    $(document).ready(function() {
        $('form[name="form"]').submit(deleteGame)
    })
</script>
